<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_zuji"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin">
        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_zuji"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="7dp"
            android:layout_height="15dp"
            android:src="@mipmap/more_info"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的足迹"
            android:textSize="@dimen/textHintSize"
            android:textColor="@color/top_bar_textColor"
            android:layout_toRightOf="@+id/image_icon"
            android:layout_marginLeft="13dp"
            android:gravity="center" />
    </RelativeLayout>
    <TextView style="@style/text_divider"/>
    <!--邀请好友-->
    <RelativeLayout
        android:id="@+id/rel_invite_friend"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin">
        <ImageView
            android:id="@+id/image_icon1"
            android:layout_width="17dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_haoyou"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="7dp"
            android:layout_height="15dp"
            android:src="@mipmap/more_info"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="邀请好友"
            android:textSize="@dimen/textHintSize"
            android:textColor="@color/top_bar_textColor"
            android:layout_toRightOf="@+id/image_icon1"
            android:layout_marginLeft="13dp"
            android:gravity="center" />
    </RelativeLayout>
    <TextView style="@style/text_divider"/>
    <RelativeLayout
        android:id="@+id/rel_help"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin">
        <ImageView
            android:id="@+id/image_icon2"
            android:layout_width="19dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_bangzhu"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="7dp"
            android:layout_height="15dp"
            android:src="@mipmap/more_info"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="帮助中心"
            android:textSize="@dimen/textHintSize"
            android:textColor="@color/top_bar_textColor"
            android:layout_toRightOf="@+id/image_icon2"
            android:layout_marginLeft="13dp"
            android:gravity="center" />
    </RelativeLayout>
</LinearLayout>
