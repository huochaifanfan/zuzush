<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="@dimen/large_margin"
    android:paddingRight="@dimen/large_margin">
    <TextView
        android:id="@+id/text_dorner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textSize="@dimen/smale_textSize"
        android:layout_centerVertical="true"
        android:textColor="@color/mainRedColor" />
    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_dorner"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="@color/mainRedColor"
        android:text="10"
        android:layout_marginLeft="@dimen/min_margin"
        android:layout_marginRight="@dimen/min_margin" />
    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元/天"
        android:textSize="@dimen/smale_textSize"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/text_price"
        android:textColor="@color/mainRedColor" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/text_newOld"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="#b6d1ff"
            android:text="全新"
            android:textSize="@dimen/smale_textSize"
            android:textColor="@color/background_white"
            android:gravity="center" />
        <TextView
            android:id="@+id/text_postage"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="#b6d1ff"
            android:text="包邮"
            android:layout_marginLeft="@dimen/normal_margin"
            android:textSize="@dimen/smale_textSize"
            android:textColor="@color/background_white"
            android:gravity="center" />
    </LinearLayout>
</RelativeLayout>
