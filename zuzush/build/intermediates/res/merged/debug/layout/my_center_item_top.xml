<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout style="@style/top_bar_layout"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:background="@color/main_blue_color">
        <ImageView
            android:id="@+id/image_account"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:src="@mipmap/account"
            android:padding="@dimen/normal_margin"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/image_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/setting"
            android:padding="@dimen/normal_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:orientation="vertical"
        android:background="@color/main_blue_color">
       <RelativeLayout
           android:layout_width="86dp"
           android:layout_height="86dp"
           android:background="@mipmap/my_image_background"
           android:layout_marginTop="13dp"
           android:layout_gravity="center_horizontal">
           <ImageView
               android:layout_width="76dp"
               android:layout_height="76dp"
               android:src="@mipmap/ic_launcher"
               android:layout_centerInParent="true"/>
       </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <TextView
                android:id="@+id/center_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一条图灵两只脚"
                android:textColor="@color/background_white"
                android:textSize="@dimen/textHintSize"
                android:layout_centerInParent="true" />
            <ImageView
                android:id="@+id/image_edit"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/edit"
                android:layout_toRightOf="@+id/center_name"
                android:layout_marginLeft="13dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal"
        android:background="@color/background_white">
        <RelativeLayout
            android:id="@+id/rel_myPublish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_publish"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_my_fabu"
                android:layout_marginTop="26dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_publish"
                android:text="我发布的"
                android:textSize="@dimen/my_center_smallTextSize"
                android:textColor="@color/top_bar_textColor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp" />
            <TextView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/my_center_icon"
                android:text="2"
                android:gravity="center"
                android:layout_toRightOf="@+id/image_publish"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="-10dp"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/my_center_smallTextSize" />
        </RelativeLayout>
        <!--我接单的-->
        <RelativeLayout
            android:id="@+id/rel_jiedan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_jiedan"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_jiedan"
                android:layout_marginTop="26dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_jiedan"
                android:text="我接单的"
                android:textSize="@dimen/my_center_smallTextSize"
                android:textColor="@color/top_bar_textColor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp" />
            <TextView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/my_center_icon_red"
                android:text="5"
                android:gravity="center"
                android:layout_toRightOf="@+id/image_jiedan"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="-10dp"
                android:textColor="#ff0000"
                android:textSize="@dimen/my_center_smallTextSize" />
        </RelativeLayout>
        <!--我下单的-->
        <RelativeLayout
            android:id="@+id/rel_xiadan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_xiadan"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_xiadan"
                android:layout_marginTop="26dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_xiadan"
                android:text="我下单的"
                android:textSize="@dimen/my_center_smallTextSize"
                android:textColor="@color/top_bar_textColor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp" />
        </RelativeLayout>
        <!--我收藏的-->
        <RelativeLayout
            android:id="@+id/rel_shoucang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_shoucang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_shoucang"
                android:layout_marginTop="26dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_shoucang"
                android:text="我收藏的"
                android:textSize="@dimen/my_center_smallTextSize"
                android:textColor="@color/top_bar_textColor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rel_xinyong"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/background_white"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin">
        <TextView style="@style/text_divider" />
        <ImageView
            android:id="@+id/image_icon2"
            android:layout_width="27dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_xinyong"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="7dp"
            android:layout_height="15dp"
            android:src="@mipmap/more_info"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提升信用值，交易会变得更快更安全"
            android:textSize="@dimen/textHintSize"
            android:textColor="@color/top_bar_textColor"
            android:layout_toRightOf="@+id/image_icon2"
            android:layout_marginLeft="13dp"
            android:gravity="center" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color" />
</LinearLayout>
