<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="apkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/top_bar</item>
        <item name="colorPrimaryDark">@color/top_bar</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/main_blue_color</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/main_text_color</item>
        <item name="tabSelectedTextColor">@color/main_blue_color</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">@dimen/top_bar_textSize</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="text_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginLeft">@dimen/left_margin</item>
        <item name="android:layout_marginRight">@dimen/right_margin</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_textSize</item>
    </style>
    <style name="image_cancel">
        <item name="android:layout_width">@dimen/image_calcel_width</item>
        <item name="android:layout_height">@dimen/image_calcel_width</item>
        <item name="android:padding">5dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@mipmap/cancel</item>
    </style>
    <style name="top_bar_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_bar_height</item>
        <item name="android:background">@color/background_white</item>
    </style>
    <style name="top_bar_textView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/top_bar_textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/top_bar_textColor</item>
    </style>
    <style name="top_bar_imageBack">
        <item name="android:layout_height">@dimen/image_back_height</item>
        <item name="android:layout_width">@dimen/image_back_width</item>
        <item name="android:padding">@dimen/normal_margin</item>
        <item name="android:layout_marginLeft">@dimen/min_margin</item>
        <item name="android:src">@mipmap/back</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="publish_text_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/top_bar_textColor</item>
        <item name="android:textSize">@dimen/textHintSize</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="publish_image_more">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:src">@mipmap/more_info</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="publish_text_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:textSize">@dimen/textHintSize</item>
        <item name="android:textColor">@color/publish_content_color</item>
    </style>
    <style name="custom_checkBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_background</item>
    </style>
    <style name="normal_layout_edittext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:textSize">@dimen/textHintSize</item>
        <item name="android:textColor">@color/top_bar_textColor</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/textHint_color</item>
    </style>
    <style name="normal_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normal_layout_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/background_white</item>
        <item name="android:paddingLeft">@dimen/large_margin</item>
        <item name="android:paddingRight">@dimen/large_margin</item>
    </style>
</resources>
