<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/background_white"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:scrollbars="none"/>
        <LinearLayout
            android:id="@+id/linear_topbar"
            android:layout_width="140dp"
            android:layout_height="45dp"
            app:layout_collapseMode="pin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="推荐的"
                android:gravity="center"
                android:textColor="@color/main_blue_color"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="新鲜的"
                android:gravity="center"
                android:textColor="@color/main_text_color"
                android:layout_height="match_parent" />
        </LinearLayout>
        <!--<android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="140dp"
            android:layout_height="45dp"
            style="@style/MyCustomTabLayout"
            app:layout_collapseMode="pin"
            android:orientation="horizontal"/>-->
        <!--<android.support.v4.view.ViewPager
            android:id="@+id/viewPager_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/background_white" />-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_bottom"
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/main_top_search">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="@dimen/normal_margin"
            android:hint="搜索你想要的宝贝"
            android:textSize="13sp"
            android:textColor="@color/main_text_color"
            android:textColorHint="@color/main_text_color" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_sousuo"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_margin" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
