<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include layout="@layout/main_bottom_normal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_one"
            android:layout_width="225dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pic_01"
            android:layout_marginLeft="@dimen/large_margin" />
        <TextView
            android:id="@+id/text_way"
            android:layout_width="42dp"
            android:layout_height="20dp"
            android:background="@drawable/tag_left"
            android:text="只租"
            android:textSize="@dimen/my_center_smallTextSize"
            android:gravity="center"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:textColor="@color/background_white" />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin"
        android:lineSpacingMultiplier="1.3"
        android:text="北京实体店分期0利息 低价促销二手95新ipad微软等品牌平板电脑,支持分期 置换 回收"
        android:textSize="@dimen/textHintSize"
        android:textColor="@color/black_textColor" />
    <include layout="@layout/main_bottom_normal1"/>
</LinearLayout>
