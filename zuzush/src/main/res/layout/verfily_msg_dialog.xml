<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_toast"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:paddingLeft="@dimen/bottom_margin"
            android:text="您的操作过于频繁，请先输入验证码 "
            android:textSize="@dimen/top_bar_textSize"
            android:textColor="@color/main_text_color"
            android:gravity="center_vertical" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="27dp"
            android:layout_marginLeft="@dimen/bottom_margin"
            android:layout_marginRight="@dimen/bottom_margin"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_msg"
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:hint="请输入..."
                android:textSize="@dimen/normal_textSize"
                android:paddingLeft="@dimen/normal_margin"
                android:maxLength="6"
                android:textColor="@color/black_textColor"
                android:background="@drawable/et_background"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/large_margin"
                android:scaleType="fitXY"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <TextView style="@style/text_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/main_text_color"
            android:text="取消"
            android:textSize="@dimen/textHintSize"
            android:gravity="center" />
        <TextView
            android:id="@+id/button_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确认"
            android:background="@color/main_blue_color"
            android:textSize="@dimen/textHintSize"
            android:textColor="@color/background_white"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
