<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <com.zuzush.zuzush.overrideview.ProcessImageView
            android:id="@+id/item_grida_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_pic"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/image_delete"
            android:visibility="gone"
            android:layout_alignRight="@+id/item_grida_image" />
        <TextView
            android:id="@+id/text_main"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="#994285F4"
            android:text="主图"
            android:visibility="gone"
            android:textSize="@dimen/textHintSize"
            android:textColor="@color/background_white"
            android:gravity="center"
            android:layout_alignBottom="@+id/item_grida_image" />
</RelativeLayout>
