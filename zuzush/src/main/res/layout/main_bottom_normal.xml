<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="@dimen/large_margin">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:src="@mipmap/pic_touxiang"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image_icon"
        android:layout_marginLeft="@dimen/normal_margin">
        <TextView
            android:id="@+id/text_userNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名称"
            android:textSize="@dimen/textHintSize"
            android:textColor="@color/black_textColor" />
        <TextView
            android:id="@+id/text_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自  北京大兴"
            android:textSize="@dimen/smale_textSize"
            android:textColor="@color/main_text_color"
            android:layout_marginTop="@dimen/min_margin"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_identify"
        android:layout_width="53dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/tag"
        android:layout_centerVertical="true"
        android:text="已实名"
        android:textColor="@color/background_white"
        android:textSize="@dimen/my_center_smallTextSize"
        android:gravity="center" />
</RelativeLayout>
