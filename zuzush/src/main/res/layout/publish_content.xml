<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/normal_leftMargin"
    android:paddingRight="@dimen/normal_leftMargin"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rel_sold_price"
        android:layout_width="match_parent"
        android:background="@drawable/linear_bottom_line_normal"
        android:layout_height="@dimen/publish_content_height">
        <TextView
            android:id="@+id/text_sold_price"
            style="@style/publish_text_content"
            android:text="出售价格" />
        <ImageView style="@style/publish_image_more"
            android:id="@+id/image_more4"/>
        <TextView
            android:id="@+id/text_price"
            style="@style/publish_text_hint"
            android:layout_toLeftOf="@+id/image_more4"
            android:text="一口价" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel_price_rent"
            android:layout_width="match_parent"
            android:background="@drawable/linear_bottom_line_normal"
            android:layout_height="@dimen/publish_content_height">
            <TextView
                style="@style/publish_text_content"
                android:text="租金" />
            <ImageView style="@style/publish_image_more"
                android:id="@+id/image_more"/>
            <TextView
                style="@style/publish_text_hint"
                android:layout_toLeftOf="@+id/image_more"
                android:text="每日租金" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_desposit"
            android:layout_width="match_parent"
            android:background="@drawable/linear_bottom_line_normal"
            android:layout_height="@dimen/publish_content_height">
            <TextView
                style="@style/publish_text_content"
                android:text="押金"
                android:id="@+id/text_yajin"/>
            <ImageView style="@style/publish_image_more"
                android:id="@+id/image_more1"/>
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="@dimen/normal_margin"
                android:src="@mipmap/icon_wenti"
                android:layout_toRightOf="@+id/text_yajin"
                android:layout_centerVertical="true" />
            <TextView
                style="@style/publish_text_hint"
                android:layout_toLeftOf="@+id/image_more1"
                android:text="物品押金" />
        </RelativeLayout>
        <!--期限-->
        <RelativeLayout
            android:id="@+id/rel_deadline"
            android:layout_width="match_parent"
            android:background="@drawable/linear_bottom_line_normal"
            android:layout_height="@dimen/publish_content_height">
            <TextView
                style="@style/publish_text_content"
                android:text="期限" />
            <ImageView style="@style/publish_image_more"
                android:id="@+id/image_more2"/>
            <TextView
                style="@style/publish_text_hint"
                android:layout_toLeftOf="@+id/image_more2"
                android:text="出租期限" />
        </RelativeLayout>
    </LinearLayout>
    <!--分类-->
    <RelativeLayout
        android:id="@+id/rel_classify"
        android:layout_width="match_parent"
        android:background="@drawable/linear_bottom_line_normal"
        android:layout_height="@dimen/publish_content_height">
        <TextView
            style="@style/publish_text_content"
            android:text="分类" />
        <ImageView style="@style/publish_image_more"
            android:id="@+id/image_more3"/>
        <TextView
            style="@style/publish_text_hint"
            android:layout_toLeftOf="@+id/image_more3"
            android:text="选择分类" />
    </RelativeLayout>
    <!--是否续租-->
    <RelativeLayout
        android:id="@+id/rel_continue"
        android:layout_width="match_parent"
        android:background="@color/background_white"
        android:layout_height="@dimen/publish_content_height">
        <TextView
            style="@style/publish_text_content"
            android:text="是否可续租" />
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@null"
            android:background="@drawable/zuzu_close" />
    </RelativeLayout>
</LinearLayout>
