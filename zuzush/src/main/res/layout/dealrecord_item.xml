<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:paddingTop="@dimen/large_margin"
    android:paddingBottom="@dimen/large_margin"
    android:paddingLeft="@dimen/left_padding"
    android:background="@color/background_white"
    android:paddingRight="@dimen/left_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出租"
            android:textSize="@dimen/textHintSize"
            android:textColor="@color/top_bar_textColor" />
        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="交易成功"
            android:layout_centerVertical="true"
            android:textSize="@dimen/smale_textSize"
            android:textColor="@color/main_text_color" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/text_dealTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-09-16 10:20:12"
            android:textSize="@dimen/smale_textSize"
            android:textColor="@color/main_text_color" />
        <TextView
            android:id="@+id/text_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="+0.21"
            android:layout_centerVertical="true"
            android:textColor="@color/deal_green_color"
            android:textSize="@dimen/textHintSize" />
    </RelativeLayout>
</RelativeLayout>
